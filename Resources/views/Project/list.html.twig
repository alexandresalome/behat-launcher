{% extends "AlexBehatLauncherBundle::layout.html.twig" %}

{% block title 'Project list' %}

{% set menu_active = "project_list" %}

{% block content %}
    {% for project in project_list %}
        <h2>{{ project.name }}</h2>
        <p><a href="{{ path('_behat_launcher_run_create', {project: project.name}) }}">Create a run</a></p>
        {% for run in run_storage.runs(project, 0, 5) %}
            <p><strong>#{{ run.id }}</strong>: {{ run.title }} - {{ run.status }}
        {% else %}
            <p><em>no run yet!</em></p>
        {% endfor %}
    {% endfor %}
{% endblock %}
