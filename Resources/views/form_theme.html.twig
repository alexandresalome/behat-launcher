{% extends "form_div_layout.html.twig" %}

{% block behat_launcher_features_row %}
    <div class="block-features">
        <div class="header">
            {{ form_label(form) }}
        </div>
        <div class="rows hidden">
            {% for sub in form %}
                <div class="row">
                    {{ form_row(sub) }}
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

{% block checkbox_row %}
    <p>{{ form_widget(form) }} {{ form_label(form) }}</p>
{% endblock %}
